extends ../../layouts/application

block content
  img.src(src=`${user.photos[0].value}`, alt="")
  p ID #{user.id}
  p Name #{user.displayName}
  p City #{user._json.city}

  each activity in activities
    if activity.map.summary_polyline
      a(href=`activity/${activity.id}`)
        p=activity.name
    unless activity.map.summary_polyline
        p=activity.name